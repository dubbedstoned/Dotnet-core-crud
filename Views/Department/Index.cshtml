@model IEnumerable<WebApplication1.Models.Department>
@{
    ViewData["Title"] = "Index";
}



<h1>Department List</h1>


<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <a class="btn btn-sm btn-primary m-2" asp-action="CreateDepartment" asp-controller="Department">Add Department</a>
            <table class=" table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Department</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr class="text-center">
                            <td>@data.DeptID</td>
                            <td>@data.DeptName</td>
                           
                            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Department" asp-route-id="@data.DeptID">Edit</a> | <a class="btn btn-sm btn-primary" asp-action="Delete" asp-controller="Department" asp-route-id="@data.DeptID" onclick="return confirm('are you sure you want to delete!!!')">Delete</a></td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>

</div>
