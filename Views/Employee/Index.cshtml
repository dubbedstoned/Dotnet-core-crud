@model IEnumerable<WebApplication1.Models.Employee>
@{
    ViewData["Title"] = "Index";
}



<h1>Index</h1>


<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <a class="btn btn-sm btn-primary m-2" asp-action="CreateEmployee" asp-controller="Employee">Add Employee</a>
            <table class=" table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>DepatmentID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr class="text-center">
                            <td>@data.EmpID</td>
                            <td>@data.EmpName</td>
                            <td>@data.EmpAddress</td>
                            <td>@data.DeptID</td>
                            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@data.EmpID">Edit</a> | <a class="btn btn-sm btn-primary" asp-action="Delete" asp-controller="Employee" asp-route-id="@data.EmpID" onclick="return confirm('are you sure you want to delete!!')">Delete</a></td>
                        
                        </tr>
                    }
                </tbody>

            </table>

        </div>

    </div>

</div>
