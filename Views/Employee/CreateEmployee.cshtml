@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "CreateEmployee";
}

<h1>CreateEmployee</h1>

<div class=" container">
    <div class=" row">
        <div class=" col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-info text-center">
                        Add Employee
                    </h1>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All"></div>
                    <form method="post" asp-action="CreateEmployee" asp-controller="Employee">
                        <div class="form-group">
                            <label class="label" asp-for="EmpName">Name</label>
                            <input type="text" class=" form-control" placeholder="Enter Name" asp-for="EmpName" />

                        </div>
                         <div class="form-group">
                            <label class="label" asp-for="EmpAddress">Address</label>
                            <input type="text" class=" form-control" placeholder="Enter Address" asp-for="EmpAddress" />

                        </div>
                         <div class="form-group">
                            <label class="label" asp-for="DeptID">Department ID</label>
                            <input type="text" class=" form-control" placeholder="Enter department ID" asp-for="DeptID" />
                            <input type="hidden" asp-for="Department" />
                        </div>
                        <div>
                            <input type="submit" class="btn btn-sm btn-primary float-right"/>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>